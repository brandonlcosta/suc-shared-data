{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SUC Week",
  "description": "Canonical training week object.",
  "type": "object",
  "required": [
    "id",
    "title",
    "status",
    "createdAt",
    "updatedAt",
    "focus",
    "stress",
    "volume",
    "intensity",
    "workouts"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "status": { "type": "string", "enum": ["draft", "published"] },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "focus": { "type": ["string", "null"] },
    "stress": { "type": "string", "enum": ["low", "med", "med-high", "high"] },
    "volume": { "type": "string", "enum": ["low", "low-med", "med", "med-high", "high"] },
    "intensity": { "type": "string", "enum": ["low", "med", "high"] },
    "eventIds": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "description": "Optional list of SUC event IDs linked to this training week."
    },
    "eventRoles": {
      "type": "object",
      "description": "Optional mapping of eventId -> role for linked events.",
      "additionalProperties": { "type": "string", "enum": ["goal", "tuneup", "simulation", "social"] }
    },
    "workouts": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 },
      "description": "Ordered list of workout IDs."
    }
  },
  "additionalProperties": false
}
