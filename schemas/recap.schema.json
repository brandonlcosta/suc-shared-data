{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SUC Weekly Recap",
  "description": "Weekly recap entries.",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["date"],
    "properties": {
      "date": { "type": "string", "minLength": 1 },
      "title": { "type": "string" },
      "summary": { "type": "string" },
      "highlights": { "type": "array", "items": { "type": "string" } }
    },
    "additionalProperties": true
  }
}
