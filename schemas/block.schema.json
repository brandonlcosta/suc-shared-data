{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SUC Block Schema",
  "description": "Descriptive training block metadata (no workout ownership).",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["blockId", "name", "intent", "weekIds"],
    "properties": {
      "blockId": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "description": "Stable block identifier."
      },
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "Block display name."
      },
      "intent": {
        "type": "string",
        "minLength": 1,
        "description": "Athlete-facing block intent statement."
      },
      "weekIds": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "description": "Ordered list of weekIds belonging to this block."
      }
    },
    "additionalProperties": false
  }
}
