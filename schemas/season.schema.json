{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SUC Season Schema",
  "description": "Canonical calendar season spine (date-driven).",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["seasonId", "name", "startDate", "endDate", "timezone", "weekIds"],
    "properties": {
      "seasonId": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "description": "Stable season identifier."
      },
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "Human-readable season name."
      },
      "startDate": {
        "type": "string",
        "format": "date",
        "description": "Season start date (YYYY-MM-DD)."
      },
      "endDate": {
        "type": "string",
        "format": "date",
        "description": "Season end date (YYYY-MM-DD)."
      },
      "timezone": {
        "type": "string",
        "enum": ["America/Los_Angeles"],
        "description": "Fixed timezone for season resolution."
      },
      "weekIds": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "description": "Ordered list of weekIds in the season."
      }
    },
    "additionalProperties": false
  }
}
